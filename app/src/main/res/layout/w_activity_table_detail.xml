<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".activities.Waiter.TableDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight=".1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_w_newlyadded_table_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Newly added" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_w_all_order_table_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="All" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".75">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_w_list_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_w_confirm_table_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="confirm" />

        <Button
            android:id="@+id/btn_w_bill_table_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BILL"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>