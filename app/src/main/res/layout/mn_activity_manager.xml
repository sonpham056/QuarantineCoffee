<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Manager.ManagerActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnManageProduct"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Manage Product"
        android:textSize="25sp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp">
    </Button>

    <Button
        android:id="@+id/btnManageEmployee"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Manage Employee"
        android:textSize="25sp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp">
    </Button>

    <Button
        android:id="@+id/btnStatistical"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Statistical"
        android:textSize="25sp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp">
    </Button>



</LinearLayout>