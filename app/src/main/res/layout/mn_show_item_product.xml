<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageview_mn_products"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".4"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_mn_product_name_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_mn_price_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_mn_amount_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_mn_promotion_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_mn_recycler_productType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".2"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButton_mn_addProduct"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/img_add"/>

        <ImageButton
            android:id="@+id/imageButton_mn_deletePromotion"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/img_del"/>

    </LinearLayout>

</LinearLayout>