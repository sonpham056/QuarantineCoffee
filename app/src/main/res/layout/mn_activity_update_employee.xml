<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8E4E4"
    tools:context=".activities.Manager.CreateEmployeeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".08"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="User Name"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_mn_username_update"
                android:layout_width="0dp"
                android:layout_height="69dp"
                android:layout_weight=".8"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="20sp"
                android:background="#F8F8F8"

                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".08"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Full name"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_mn_fullname_update"
                android:layout_width="0dp"
                android:layout_height="67dp"
                android:layout_weight=".8"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textSize="20sp"
                android:background="#F8F8F8"

                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".08"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Role"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_mn_role_update"
                android:layout_width="0dp"
                android:layout_height="67dp"
                android:layout_weight=".8"
                android:background="#F8F8F8"
                android:ems="10"
                android:inputType="none|numberDecimal"
                android:minHeight="48dp"
                android:textSize="20sp"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".05"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/ckb_mn_check_update"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_gravity="center_vertical"
                android:textSize="30sp"
                android:background="#E9ECD9"
                android:text="Gender? Is that male?" />

        </LinearLayout>
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".05"
            android:text="Role: 0: Manager | 1: Waiter | 2: Bartender"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".05"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_mn_confirm_update"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:text="Confirm" />

            <Button
                android:id="@+id/btn_mn_back_update"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:text="Back" />

        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>