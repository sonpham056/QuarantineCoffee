<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#F8E4E4"
    tools:context=".activities.Manager.StatisticalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp">

        <EditText
            android:id="@+id/txt_mn_statistical_date_from"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight=".5"
            android:background="#F8F8F8"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Choose 'FROM' date"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_mn_statistical_date_to"
            android:layout_width="0dp"
            android:layout_height="73dp"
            android:layout_weight=".5"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Choose 'TO' date"
            android:background="#F8F8F8"
            android:inputType="textPersonName" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_mn_statistical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        android:layout_weight=".8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_mn_result_statistical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choose dates to see the result"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp"
            android:background="#F8F8F8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_mn_bill_result_statistical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Result" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>